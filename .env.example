# KI - AI Training Platform Configuration

# === APPLICATION ===
APP_NAME=KI
APP_VERSION=0.1.0
APP_ENV=development
DEBUG=true

# === PATHS ===
PROJECT_ROOT=/mnt/c/Users/Gohanckz/Desktop/IA-Proyect/ki
STORAGE_PATH=${PROJECT_ROOT}/storage
DATASETS_PATH=${STORAGE_PATH}/datasets
MODELS_PATH=${STORAGE_PATH}/models
DOCUMENTS_PATH=${STORAGE_PATH}/documents
LOGS_PATH=${STORAGE_PATH}/logs

# === API ===
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# === GRADIO UI ===
GRADIO_HOST=0.0.0.0
GRADIO_PORT=7860
GRADIO_SHARE=false
GRADIO_THEME=default

# === OLLAMA ===
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.1
OLLAMA_TIMEOUT=300
OLLAMA_NUM_GPU=1
OLLAMA_NUM_THREAD=8

# === TRAINING ===
DEFAULT_BASE_MODEL=codellama/CodeLlama-7b-hf
BATCH_SIZE=2
GRADIENT_ACCUMULATION_STEPS=8
LEARNING_RATE=2e-4
NUM_EPOCHS=3
MAX_LENGTH=512
LORA_R=16
LORA_ALPHA=32
LORA_DROPOUT=0.05
USE_4BIT_QUANTIZATION=true
USE_FP16=true
USE_GRADIENT_CHECKPOINTING=true

# === GPU ===
CUDA_VISIBLE_DEVICES=0
MAX_VRAM_USAGE_GB=7.5
ENABLE_CPU_OFFLOAD=true

# === DATASET GENERATION ===
EXAMPLES_PER_DOCUMENT=5
MIN_EXAMPLE_LENGTH=50
MAX_EXAMPLE_LENGTH=500
QUALITY_THRESHOLD=0.7
ENABLE_DEDUPLICATION=true

# === DATABASE ===
DB_PATH=${STORAGE_PATH}/databases/metadata.db
VECTOR_DB_PATH=${STORAGE_PATH}/databases/chromadb

# === MONITORING ===
ENABLE_TENSORBOARD=true
TENSORBOARD_PORT=6006
ENABLE_WANDB=false
WANDB_PROJECT=ki-training
WANDB_ENTITY=your-username
WANDB_API_KEY=your-api-key-here

# === LOGGING ===
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_TO_FILE=true
LOG_TO_CONSOLE=true

# === SECURITY ===
SECRET_KEY=change-this-to-a-secure-random-key
ALLOWED_ORIGINS=*
ALLOWED_HOSTS=*

# === FEATURES ===
ENABLE_AUTO_SAVE=true
ENABLE_GPU_MONITORING=true
ENABLE_QUALITY_VALIDATION=true
ENABLE_CHECKPOINT_RESUME=true

# === ADVANCED ===
MAX_WORKERS=4
CACHE_SIZE_MB=1024
CLEANUP_ON_EXIT=false
